<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical|center_horizontal"
        android:fitsSystemWindows="true"
        tools:ignore="UselessParent">
        <include
            android:id="@+id/show_mainfg2_title"
            layout="@layout/login_title" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/qb_px_200"
            android:layout_height="@dimen/qb_px_100"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/qb_px_90"
            android:background="@drawable/ic_logo"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:layout_below="@id/imageView"
            android:id="@+id/linearLayout4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical"
            tools:ignore="UselessParent"
            android:layout_alignParentLeft="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/qb_px_10"
                android:layout_marginTop="@dimen/qb_px_20"
                tools:ignore="RtlHardcoded">

                <ImageView
                    android:layout_width="@dimen/qb_px_25"
                    android:layout_height="@dimen/qb_px_25"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_user"
                    tools:ignore="ContentDescription,HardcodedText,SpUsage" />

                <EditText
                    android:id="@+id/login_user"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/qb_px_40"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/qb_px_20"
                    android:background="@drawable/edit_bg"
                    android:cursorVisible="false"
                    android:hint=" 请输入用户名"
                    android:lines="1"
                    android:textColorHint="#9f9f9f"
                    android:textSize="@dimen/qb_px_20"
                    tools:ignore="HardcodedText,SpUsage,TextFields" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/qb_px_5"
                android:background="#9f9f9f" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/qb_px_40"
                android:layout_marginLeft="@dimen/qb_px_10"
                android:layout_marginTop="@dimen/qb_px_20"
                tools:ignore="Orientation,RtlHardcoded">

                <ImageView
                    android:layout_width="@dimen/qb_px_25"
                    android:layout_height="@dimen/qb_px_25"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_psd"
                    tools:ignore="ContentDescription,HardcodedText,SpUsage" />

                <EditText
                    android:id="@+id/login_pass"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/qb_px_40"
                    android:layout_marginLeft="@dimen/qb_px_20"
                    android:layout_weight="1"
                    android:background="@drawable/edit_bg"
                    android:cursorVisible="false"
                    android:hint="请输入密码"
                    android:inputType="textPassword"
                    android:lines="1"
                    android:textColorHint="#9f9f9f"
                    android:textSize="@dimen/qb_px_20"
                    tools:ignore="HardcodedText,InefficientWeight,SpUsage,TextFields" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/qb_px_5"
                android:background="#9f9f9f" />

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/qb_px_10"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/login_btn"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/qb_px_50"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="@dimen/qb_px_20"
                    android:layout_marginRight="@dimen/qb_px_20"
                    android:layout_marginTop="@dimen/qb_px_30"
                    android:background="@drawable/loginbtn"
                    android:gravity="center"
                    android:text="登    录"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/qb_px_25"
                    tools:ignore="HardcodedText,SpUsage" />

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>