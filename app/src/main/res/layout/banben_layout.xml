<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_weight="1"
    android:background="#e4e5e7"
    tools:ignore="Orientation">
    <include
        android:id="@+id/show_mainfg1_title"
        layout="@layout/banben_title" />
    <ImageView
        android:id="@+id/h_head"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/show_mainfg1_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:layout_gravity="center"
        android:background="@drawable/ic_banben" />
    <TextView
        android:layout_below="@id/h_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:text="版本号 1.0.1"
        tools:ignore="HardcodedText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="44dp"
        android:text="彩铝制造      生产监视"
        android:textColor="#a3a0a0"
        tools:ignore="HardcodedText" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="        Copyright   ba | aba | a.............."
        android:textColor="#a3a0a0"
        tools:ignore="HardcodedText" />

</RelativeLayout>
